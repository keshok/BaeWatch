<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">
    <TextView
        android:id="@+id/loginUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@+id/etUsername" />
    <TextView
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/etUsername"
        android:layout_alignLeft="@+id/etUsername" />
    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Login" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/loginPassword"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7" />
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginBottom="22dp"
        android:layout_alignLeft="@+id/etPassword" />
    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password? "
        android:layout_marginTop="22dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lostpass"
        android:layout_alignBaseline="@+id/forgetPass"
        android:layout_alignBottom="@+id/forgetPass"
        android:layout_alignEnd="@+id/loginButton"
        android:layout_alignRight="@+id/loginButton"
        android:onClick="onForgetPassword" />
</RelativeLayout>