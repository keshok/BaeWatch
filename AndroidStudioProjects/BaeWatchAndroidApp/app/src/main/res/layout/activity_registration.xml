<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/editText"
        android:layout_alignLeft="@+id/editText" />
    <RadioButton
        android:text="Short Term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton8"
        android:layout_alignBaseline="@+id/radioButton7"
        android:layout_alignBottom="@+id/radioButton7"
        android:layout_toEndOf="@+id/radioButton7"
        android:layout_toRightOf="@+id/radioButton7" />
    <RadioButton
        android:text="Friendship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton8"
        android:layout_toEndOf="@+id/radioButton8"
        android:id="@+id/radioButton9"
        android:layout_toRightOf="@+id/radioButton8" />
    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/radioButton7"
        android:layout_toRightOf="@+id/radioButton7" />
    <RadioButton
        android:text="Homosexual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/radioButton7"
        android:layout_toRightOf="@+id/radioButton7" />
    <Button
        android:text="Choose Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/radioButton5"
        android:layout_alignLeft="@+id/radioButton5" />
    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_alignParentLeft="true"
        android:onClick="onRegister" />
    <TextView
        android:text="Profile Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/radioButton4"
        android:layout_marginBottom="29dp"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/radioButton4" />
    <RadioButton
        android:text="Long Term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton7"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="25dp"
        android:layout_alignLeft="@+id/textView5" />
    <RadioButton
        android:text="Straight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_alignBaseline="@+id/radioButton5"
        android:layout_alignBottom="@+id/radioButton5"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3" />
    <TextView
        android:text="Sexual Orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/radioButton4" />
    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4" />
    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/radioButton2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/textView2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/radioButton4"
        android:layout_toRightOf="@+id/radioButton4" />
    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/textView" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="11dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="32dp"
        android:layout_above="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />
    <TextView
        android:text="Relationship Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton4"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/radioButton4" />
    <RadioButton
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:layout_alignBaseline="@+id/radioButton5"
        android:layout_alignBottom="@+id/radioButton5"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignRight="@+id/editText2" />
    <RadioButton
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton6"
        android:layout_alignLeft="@+id/radioButton6" />
    <TextView
        android:text="User Registration"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold" />
</RelativeLayout>